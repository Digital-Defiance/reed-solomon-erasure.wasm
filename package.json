{
  "name": "@digitaldefiance/reed-solomon-erasure.wasm",
  "version": "1.0.0",
  "description": "Reed-Solomon erasure coding compiled to WebAssembly - browser and Node.js compatible",
  "author": "Digital Defiance",
  "license": "MIT",
  "keywords": [
    "reed-solomon",
    "erasure-coding",
    "parity",
    "shard",
    "error-correction",
    "ecc",
    "wasm",
    "webassembly",
    "browser",
    "nodejs"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Digital-Defiance/reed-solomon-erasure.wasm.git"
  },
  "homepage": "https://github.com/Digital-Defiance/reed-solomon-erasure.wasm#readme",
  "bugs": {
    "url": "https://github.com/Digital-Defiance/reed-solomon-erasure.wasm/issues"
  },
  "packageManager": "yarn@4.11.0",
  "files": [
    "dist",
    "browser"
  ],
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "browser": "browser/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "browser": "./browser/index.js",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./browser": {
      "types": "./dist/index.d.ts",
      "import": "./browser/index.mjs",
      "require": "./browser/index.js"
    },
    "./wasm": "./dist/reed_solomon_erasure_bg.wasm"
  },
  "sideEffects": false,
  "scripts": {
    "clean": "rm -rf dist browser",
    "compile-wasm": "wasm-pack build --release --out-dir wasm-build && cp wasm-build/reed_solomon_erasure_bg.wasm src/ && rm -rf wasm-build",
    "compile:cjs": "tsc -p tsconfig.json",
    "compile:esm": "tsc -p tsconfig.esm.json",
    "compile:browser": "tsc -p tsconfig.browser.json",
    "compile": "yarn compile:cjs && yarn compile:esm && yarn compile:browser",
    "copy-wasm": "cp src/*.wasm dist/ && cp src/*.wasm browser/",
    "build": "yarn clean && yarn compile && yarn copy-wasm",
    "build:full": "yarn clean && yarn compile-wasm && yarn compile && yarn copy-wasm",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:browser": "vitest --environment jsdom",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "yarn build"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "jsdom": "^24.0.0",
    "typescript": "^5.4.0",
    "vitest": "^1.6.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
